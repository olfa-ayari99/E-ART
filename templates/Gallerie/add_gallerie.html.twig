{% extends "base/base.html.twig" %}


{% block body %}
	<section class="content-section" data-background="#fffbf7">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="section-title text-center justify-content-center">
						<figure><img src="{{ asset("images/title-shape.png") }}" alt="Image"></figure>
						<h2 style="font-size: 50px">Ajout d'une nouvelle gallerie</h2>
						<h3>
							<i>Veuillez renseigner tous les champs</i>
						</h3>


					</div>
				</div>
			</div>

			<div class="row justify-content-center">
				{{ form_start(gallerieForm,{'attr': {'novalidate': 'novalidate'}} ) }}
				<div class="contact-form">

					<div class="mb-3">
						{{ form_label(gallerieForm.prix) }}
						{{ form_widget(gallerieForm.prix) }}
						{{ form_errors(gallerieForm.prix) }}
					</div>

					<div class="mb-3">
						{{ form_label(gallerieForm.adresse) }}
						{{ form_widget(gallerieForm.adresse) }}
						{{ form_errors(gallerieForm.adresse) }}
					</div>



					<div class="mb-3">
						{{ form_label(gallerieForm.description) }}
						{{ form_widget(gallerieForm.description) }}
						{{ form_errors(gallerieForm.description) }}
					</div>

					<div class="mb-3">
						{{ form_label(gallerieForm.photo) }}
						{{ form_widget(gallerieForm.photo) }}
						{{ form_errors(gallerieForm.photo) }}
					</div>

					<div class="mb-3">
						{{ form_row(gallerieForm.submit) }}
					</div>


				</div>

				{{ form_end(gallerieForm) }}

			</div>
		</div>
	</section>
{% endblock %}
